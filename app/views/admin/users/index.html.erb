<section class="section">
  <div class="container">
    <div class="block buttons">
      <%= link_to t("add"), new_admin_user_path, class: "button is-primary" %>
    </div>
    <h1 class="title"><%= User.model_name.human(count: 42) %></h1>
    <table class="table">
      <thead>
        <tr>
          <th><%= User.human_attribute_name :email %></th>
          <th><%= User.human_attribute_name :name %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td>
              <div class="buttons">
                <%= link_to t("edit"), edit_admin_user_path(user), class: "button is-small" %>
                <%= link_to t("delete"), admin_user_path(user), data: {confirm: t("confirm_delete")}, method: :delete, class: "button is-small is-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
