<% if @user.errors.any? %>
<h2><%= pluralize(@user.errors.count, "error") %> preveneted this user from being saved:</h2>
<ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: [:admin, @user], local: true do |f| %>
  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, required: true, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email, class: "label" %>
    <div class="control">
      <%= f.text_field :email, required: true, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <div class="control">
      <%= f.password_field :password, required: true, class: "input", placeholder: "Must be at least 6 characters long" %>
    </div>
  </div>

  <p>
    <%= f.submit class: "button is-primary" %>
  </p>
<% end %>
