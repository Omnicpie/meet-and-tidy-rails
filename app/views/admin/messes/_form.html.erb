<% if @mess.errors.any? %>
<h2><%= pluralize(@mess.errors.count, "error") %> prmessed this mess from being saved:</h2>
<ul>
  <% @mess.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: [:admin, @mess], local: true do |f| %>
  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, required: true, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description, class: "label" %>
    <div class="control">
      <%= f.text_area :description, required: true, class: "textarea", rows: 4 %>
    </div>
  </div>

  <div class="field">
    <%= f.label :location, class: "label" %>
    <div class="control">
      <%= f.text_field :location, required: true, class: "input" %>
    </div>
  </div>

  <% @mess.images.each do |img| %>
    <%= image_tag @mess.img %>
  <% end %>

  <p>
    <%= f.submit class: "button is-primary" %>
  </p>
<% end %>
