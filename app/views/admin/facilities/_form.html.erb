<% if @facility.errors.any? %>
<h2><%= pluralize(@event.errors.count, "error") %> prevented this facility from being saved:</h2>
<ul>
  <% @facility.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: [:admin, @facility], local: true do |f| %>
  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, required: true, class: "input" %>
    </div>
  </div>

  <p>
    <%= f.submit class: "button is-primary" %>
  </p>
<% end %>
