<section class="section">
  <div class="container">
    <div class="block buttons">
      <%= link_to "Add", new_admin_event_path, class: "button is-primary" %>
    </div>
    <h1 class="title">Brands</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event %></td>
            <td>
              <div class="buttons">
                <%= link_to "Edit", edit_admin_event_path(event), class: "button is-small" %>
                <%= link_to "Delete", admin_event_path(event), data: {confirm: "Are you sure you want to delete this?"}, method: :delete, class: "button is-small is-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
